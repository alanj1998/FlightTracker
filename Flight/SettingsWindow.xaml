<Window x:Class="FlightTracker.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightTracker"
        mc:Ignorable="d"
        Title="Settings" Height="500" Width="300" AllowsTransparency="True" WindowStyle="None" Background="#00000000" WindowStartupLocation="CenterScreen">
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Top" Height="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Rectangle HorizontalAlignment="Left" Height="40" Stroke="#FF3892ED" VerticalAlignment="Top" Width="300" Grid.ColumnSpan="2">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF0D68C3" Offset="0"/>
                        <GradientStop Color="#FF3892ED" Offset="0.631"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <Image x:Name="btnClose" Source="Assets/Images/exitLogo.png" RenderOptions.BitmapScalingMode="HighQuality" MouseLeftButtonDown="btnClose_Click" Grid.Column="1"/>
            <Label x:Name="lblTitle" Content="{DynamicResource settings}" Grid.Column="0"/>
        </Grid>
        <Button Content="{DynamicResource save}" Click="Button_Click" DockPanel.Dock="Bottom"/>

        <Rectangle Stroke="#FF3892ED" DockPanel.Dock="Top">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFEC3C3C" Offset="0.671"/>
                    <GradientStop Color="#CCE00000" Offset="0.936"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
    </DockPanel>

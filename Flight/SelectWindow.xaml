<Window x:Class="Flight.SelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flight"
        mc:Ignorable="d"
        Title="Flights Options" Height="123" Width="377" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Unloaded="Window_Unloaded" AllowsTransparency="True" WindowStyle="None">
    <Grid>
        <!-- Layout of the Window -->
        <Rectangle HorizontalAlignment="Left" Height="30" Stroke="#FF0C6CE0" VerticalAlignment="Top" Width="377">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF055F7A" Offset="0"/>
                    <GradientStop Color="#FF0C6CE0" Offset="0.357"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Image x:Name="btnClose" Source="Files/exitLogo.png" RenderOptions.BitmapScalingMode="HighQuality" Margin="339,0,0,93" MouseLeftButtonDown="btnClose_Click"></Image>
        <Label x:Name="lblTitle" Content="Add Flight Details" HorizontalAlignment="Center" VerticalAlignment="Center" Width="130" Height="30" FontSize="14.667" Margin="10,0,237,93"/>

        <!-- Controls -->
        <Label x:Name="lblEnter" Content="Enter " HorizontalAlignment="Left" Margin="16,43,0,0" VerticalAlignment="Top" Width="143"/>
        <TextBox x:Name="txBoxChoice" HorizontalAlignment="Left" Height="23" Margin="174,45,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="181"/>
        <Button x:Name="btnSearch" Content="Search" HorizontalAlignment="Left" Margin="85,85,0,0" VerticalAlignment="Top" Width="75" Click="btnSearch_Click"/>
        <Button x:Name="btnMainMenu" Content="Back to Main Menu" HorizontalAlignment="Left" Margin="165,85,0,0" VerticalAlignment="Top" Width="116" Click="btnMainMenu_Click"/>
    </Grid>
</Window>
